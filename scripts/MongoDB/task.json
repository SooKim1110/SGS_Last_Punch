{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "task",
    "properties": {
        "workspace": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                }
            },
            "additionalProperties": false,
            "required": [
                "id"
            ]
        },
        "channel": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                }
            },
            "additionalProperties": false,
            "required": [
                "id"
            ]
        },
        "title": {
            "type": "string"
        },
        "content": {
            "type": "string"
        },
        "status": {
            "type": "integer"
        },
        "date": {
            "type": "object",
            "properties": {
                "created": {
                    "type": "string",
                    "format": "date-time"
                },
                "modified": {
                    "type": "string",
                    "format": "date-time"
                }
            },
            "additionalProperties": false,
            "required": [
                "created",
                "modified"
            ]
        }
    },
    "additionalProperties": false
}